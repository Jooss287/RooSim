<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:RooStatsSim.UI">

    <DataTemplate x:Key="statusButton" >
        <Border Background="#FF8BCAFF" Width="370" Height="30" CornerRadius="5">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Label Content="{Binding Path=StatusName}"/>
                <Label Content="{Binding Path=StatusPoint}"/>
                <Label Content="+"/>
                <Label Content="{Binding Path=StatusAddPoint}"/>
                <Border Background="Blue" CornerRadius="2" Width="15" Height="15">
                    <Path Stretch="Fill"
                          Fill="white"
                          Stroke="{x:Null}"
                          StrokeThickness="0.5"
                          Data="M3.875,0 L5.125,0 5.125,3.875 9,3.875 9,5.125 5.125,5.125 5.125,9 3.875,9 3.875,5.125 0,5.125 0,3.875 3.875,3.875 3.875,0 z"
                              Margin="3,3,3,3"/>
                </Border>
            </StackPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>