<Window x:Class="RooStatsSim.UI.Equipment.EquipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RooStatsSim.UI.Equipment"
        mc:Ignorable="d"
        Title="EquipWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <Grid Width="400">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Button Content="111" Grid.Row="0" Grid.Column="0"/>
            <Button Content="111" Grid.Row="0" Grid.Column="1"/>
            <Button Content="111" Grid.Row="0" Grid.Column="2"/>
        </Grid>
    </StackPanel>
</Window>
