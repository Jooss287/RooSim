<Window x:Class="RooStatsSim.UI.StatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RooStatsSim.UI"
        mc:Ignorable="d"
        Title="StatusWindow" Height="450" Width="800" Background="White">
    <Window.Resources>
        <local:StatusInit x:Key="StatusList"/>
    </Window.Resources>
    <Grid>
        <ListBox 
            HorizontalAlignment="Left" VerticalAlignment="Top"
            BorderThickness="0"
            Height="399" Width="370"
            Margin="10,10,0,0">
        </ListBox>
    </Grid>
</Window>
