<Window x:Class="RooStatsSim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RooStatsSim"
        xmlns:skill="clr-namespace:RooStatsSim.Skills"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
         
        mc:Ignorable="d"
        Title="RooSim" Height="573" Width="870"
        Left="50" Top="50"
        Closing="Window_Closing">
    <Window.Resources>
        <skill:SkillAdd x:Key="SkillList"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="121*"/>
            <ColumnDefinition Width="742*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Margin="0,10,0,0" Grid.ColumnSpan="2" >
            <StackPanel Orientation="Horizontal">
                <GroupBox Header="직업 선택" HorizontalAlignment="Left" Margin="10,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <RadioButton x:Name="radio_job" Tag="0" IsChecked="True" Checked="job_sel_Click" Content="로&#10;나" Grid.Column="0" GroupName="group_attack_type" />
                        <RadioButton Tag="1" Checked="job_sel_Click" Content="블&#10;스" Grid.Column="1" GroupName="group_attack_type" />
                        <RadioButton Tag="2" Checked="job_sel_Click" Content="어&#10;크" Grid.Column="2" GroupName="group_attack_type" />
                        <RadioButton Tag="3" Checked="job_sel_Click" Content="스&#10;나" Grid.Column="3" GroupName="group_attack_type"/>
                        <RadioButton Tag="4" Checked="job_sel_Click" Content="하&#10;위" Grid.Column="4" GroupName="group_attack_type" />
                        <RadioButton Tag="5" Checked="job_sel_Click" Content="하&#10;프" Grid.Column="5" GroupName="group_attack_type" />
                    </Grid>
                </GroupBox>
                <GroupBox Header="Save Point">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton IsChecked="True"/>
                        <RadioButton />
                        <RadioButton />
                        <RadioButton />
                    </StackPanel>
                </GroupBox>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Status" Grid.Row="0" Grid.Column="0"
                            Click="Status_window_Click"/>
                    <Button Content="Skill" Grid.Row="0" Grid.Column="1"
                            Click="Skill_window_Click"/>
                    <Button Content="Equip" Grid.Row="0" Grid.Column="2"
                            Click="Equip_window_Click"/>
                    <Button Content="StackBuff" Grid.Row="1" Grid.Column="0"
                            Click="StackBuff_window_Click"/>
                    <Button Content="DBManager" Grid.Row="2" Grid.Column="1"
                            Click="DBManager_window_Click"/>
                    <Button Content="Info" Grid.Row="2" Grid.Column="2"
                            Click="Info_window_Click"/>
                </Grid>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical" 
                            Margin="10, 0, 0, 0"
                            Width="230" Height="350" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <GroupBox Header="스테이터스">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="67"/>
                                <ColumnDefinition Width="79*"/>
                                <ColumnDefinition Width="78*"/>
                            </Grid.ColumnDefinitions>
                            <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" Grid.Row="5" Grid.Column="0">S.ATK</Label>
                            <TextBox Name="txt_sATK" TabIndex="1" 
                         TextAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                         FontSize="15" 
                         Grid.Row="5" Grid.Column="1"
                         GotFocus="TxtboxSelectAll"
                         PreviewTextInput="NurmericCheckFunc" />
                        </Grid>
                    </GroupBox>
                    <Button Height="30" Click="ATK_ReverseClick" Content="상태창ATK역계산" Margin="0,20,0,0"/>
                    <Button x:Name="CalcSim" Height="30" Click="CalcSim_Click" Content="계산하기"/>
                    <TextBox Name="retCalc" Height="30" VerticalContentAlignment="Center" IsEnabled="False" TextAlignment="Center">결과값</TextBox>
                </StackPanel>
                <GroupBox Header="버프스킬 List" Margin="10,0,0,0" Width="200">
                    <ListBox x:Name="SkillListBox" ItemsSource="{Binding Source={StaticResource SkillList},
                                                    Path=SkillListSync}"
                             IsSynchronizedWithCurrentItem="True">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <CheckBox 
                                            Content="{Binding Path=SkillName}" 
                                            Click="CheckBox_Click"
                                            Tag="{Binding Path=SkillListCnt}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
