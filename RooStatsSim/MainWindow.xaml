<Window x:Class="RooStatsSim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RooStatsSim"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1200">
    <Grid>
        <StackPanel Orientation="Vertical" Width="224" Margin="10,10,0,0" Height="300" VerticalAlignment="Top" HorizontalAlignment="Left">
            <GroupBox Header="attack type">
                <Grid x:Name="radio_attack_type">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <RadioButton Content="근거리" Tag="0" Grid.Column="0" />
                    <RadioButton Content="원거리" Tag="1" Grid.Column="1" />
                </Grid>
            </GroupBox>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="67"/>
                    <ColumnDefinition Width="79*"/>
                    <ColumnDefinition Width="78*"/>
                </Grid.ColumnDefinitions>

                <Label HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="15" FontWeight="Bold" Grid.Row="0" Grid.Column="1">능력치</Label>
                <Label HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="15" FontWeight="Bold" Grid.Row="0" Grid.Column="2">가중치</Label>
                <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" Grid.Row="1" Grid.Column="0">B.LEVEL</Label>
                <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" Grid.Row="2" Grid.Column="0">STR</Label>
                <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" Grid.Row="3" Grid.Column="0">DEX</Label>
                <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" Grid.Row="4" Grid.Column="0">LUK</Label>

                <TextBox Name="txt_LvlBase" TextAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="15" Grid.Row="1" Grid.Column="1">1</TextBox>
                <TextBox Name="txt_StrBase" TextAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="15" Grid.Row="2" Grid.Column="1">1</TextBox>
                <TextBox Name="txt_DexBase" TextAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="15" Grid.Row="3" Grid.Column="1">1</TextBox>
                <TextBox Name="txt_LukBase" TextAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="15" Grid.Row="4" Grid.Column="1">1</TextBox>

                <TextBox Name="txt_StrAdd" TextAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="15" Grid.Row="2" Grid.Column="2">1</TextBox>
                <TextBox Name="txt_DexAdd" TextAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="15" Grid.Row="3" Grid.Column="2">1</TextBox>
                <TextBox Name="txt_LukAdd" TextAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="15" Grid.Row="4" Grid.Column="2">1</TextBox>
            </Grid>
        </StackPanel>

        <GroupBox Header="장비 설정" Margin="239,10,603,59" Width="350" Height="350" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid Margin="3,5,3,3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Grid.Column="0" FontWeight="Bold">머리상단</Button>
                <Button Grid.Row="1" Grid.Column="0" FontWeight="Bold">머리하단</Button>
                <Button Grid.Row="2" Grid.Column="0" FontWeight="Bold">무기</Button>
                <Button Grid.Row="3" Grid.Column="0" FontWeight="Bold">걸칠것</Button>
                <Button Grid.Row="4" Grid.Column="0" FontWeight="Bold">악세사리1</Button>
                <Button Grid.Row="5" Grid.Column="0" FontWeight="Bold">의상</Button>
                <Button Grid.Row="6" Grid.Column="0" FontWeight="Bold">기어</Button>

                <Button Grid.Row="0" Grid.Column="1" FontWeight="Bold">머리중단</Button>
                <Button Grid.Row="1" Grid.Column="1" FontWeight="Bold">갑옷</Button>
                <Button Grid.Row="2" Grid.Column="1" FontWeight="Bold">보조무기</Button>
                <Button Grid.Row="3" Grid.Column="1" FontWeight="Bold">신발</Button>
                <Button Grid.Row="4" Grid.Column="1" FontWeight="Bold">악세사리2</Button>
                <Button Grid.Row="5" Grid.Column="1" FontWeight="Bold">가방</Button>
                <Button Grid.Row="6" Grid.Column="1" FontWeight="Bold">탈것</Button>
            </Grid>
        </GroupBox>

        <GroupBox Header="데미지 결산" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="594,10,0,0" Width="185" Height="350">
            <StackPanel Orientation="Vertical">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35*" />
                        <ColumnDefinition Width="15*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical" Grid.Column="0">
                        <Label>무기 ATK</Label>
                        <Label>장비 ATK</Label>
                        <Label>제련 ATK</Label>
                        <Label>마스터리 ATK</Label>
                        <Label>물리 데미지%</Label>
                        <Label>추가 물리 데미지</Label>
                        <Label>근/원거리 데미지</Label>
                        <Label>ATK%</Label>
                        <Label>DEF무시%</Label>
                        <Label>속성 증가 데미지%</Label>
                        <Label>종족 증가 데미지%</Label>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Column="1">
                        <StackPanel.Resources>
                            <Style TargetType="TextBox">
                                <Setter Property="Height" Value="26"/>
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Setter Property="TextAlignment" Value="Center" />
                            </Style>
                        </StackPanel.Resources>
                        <TextBox x:Name ="txt_atk_weapon">100</TextBox>
                        <TextBox x:Name ="txt_atk_equip">100</TextBox>
                        <TextBox x:Name ="txt_atk_smelting">100</TextBox>
                        <TextBox x:Name ="txt_atk_mastery">40</TextBox>
                        <TextBox x:Name ="txt_pdamage_percent">10</TextBox>
                        <TextBox x:Name ="txt_pdamage_add">100</TextBox>
                        <TextBox x:Name ="txt_pdamage_attacktype">15</TextBox>
                        <TextBox x:Name ="txt_atk_percent">3</TextBox>
                        <TextBox x:Name ="txt_def_ignore">35</TextBox>
                        <TextBox x:Name ="txt_element_increse">20</TextBox>
                        <TextBox x:Name ="txt_tribe_increse">20</TextBox>
                    </StackPanel>
                </Grid>
                <Button Name="CalcSim" Height="35" Click="CalcSim_Click">계산하기</Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
