<Page x:Class="DbManager.UI.MonsterManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DbManager.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MonsterManager">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Button Width="100" Height="30" Margin="5,5,5,5" Click="New_DB_Click">New DB</Button>
            <Button Width="100" Height="30" Margin="5,5,5,5" Click="Save_DB_Click">Save DB</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <ListBox x:Name="DB_ListBox" Width="200" Height="400"></ListBox>
            <GroupBox Header="DB Info">
                <StackPanel Orientation="Vertical" Background="BlueViolet">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Content="Boss/Mini" Margin="5,5,5,5"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="2,5,2,0">
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="번호" Width="40" TextAlignment="Center"/>
                            <TextBox x:Name="MobNumber" Text="" Width="70" IsEnabled="False"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                            <TextBlock Text="이름" Width="40" TextAlignment="Center"/>
                            <TextBox x:Name="MobName" Text="" Width="70"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="2,5,2,0">
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="종족" Width="40" TextAlignment="Center"/>
                            <TextBox x:Name="MobTribe" Text="" Width="70"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                            <TextBlock Text="속성" Width="40" TextAlignment="Center"/>
                            <TextBox x:Name="MobElement" Text="" Width="70"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                            <TextBlock Text="크기" Width="40" TextAlignment="Center"/>
                            <ComboBox Name="MobSize" Width="70">
                                <ItemsControl>
                                    <ComboBoxItem Content="소형"/>
                                    <ComboBoxItem Content="중형"/>
                                    <ComboBoxItem Content="대형"/>
                                </ItemsControl>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="2,5,2,0">
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="ATK" Width="40" TextAlignment="Center"/>
                            <TextBox x:Name="MobAtk" Text="" Width="70"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                            <TextBlock Text="MATK" Width="40" TextAlignment="Center"/>
                            <TextBox x:Name="MobMatk" Text="" Width="70"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="2,5,2,0">
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="MaxHP" Width="40" TextAlignment="Center"/>
                            <TextBox x:Name="MobHp" Text="" Width="70"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                            <TextBlock Text="DEF" Width="40" TextAlignment="Center"/>
                            <TextBox x:Name="MobDef" Text="" Width="70"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                            <TextBlock Text="MDEF" Width="40" TextAlignment="Center"/>
                            <TextBox x:Name="MobMdef" Text="" Width="70"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="2,5,2,0">
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="HIT" Width="40" TextAlignment="Center"/>
                            <TextBox x:Name="MobHit" Text="" Width="70"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                            <TextBlock Text="FLEE" Width="40" TextAlignment="Center"/>
                            <TextBox x:Name="MobFlee" Text="" Width="70"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </StackPanel>
</Page>
